 @model IEnumerable<Security.Blog>

@{
    ViewBag.Title = "Default";
}

<h2>Default</h2>

<table class="table table-hover">
    <tr class="danger">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author_id)
        </th>
        <th>
            Read
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr data-toggle="collapse" data-target="#accordion" class="success">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.ActionLink("Read", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
